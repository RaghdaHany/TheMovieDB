<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.themoviedb.MainActivity">

    <Button
        android:id="@+id/fetchDataBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Fetch Data" />

    <Button
        android:id="@+id/okHttpBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fetchDataBtn"
        android:layout_marginTop="14dp"
        android:text="go to OkHttpRequest" />

    <Button
        android:id="@+id/startApp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/okHttpBtn"
        android:layout_marginTop="81dp"
        android:text="START TMDB APP"
        android:textColor="#ff0000" />

    <ScrollView
        android:id="@+id/SCROLLER_ID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/startApp"
        android:fillViewport="true"
        android:scrollbars="vertical">

        <TextView
            android:id="@+id/dataTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/fetchDataBtn"
            android:scrollbars="vertical" />
    </ScrollView>
</RelativeLayout>